<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/small_padding"
    card_view:cardCornerRadius="@dimen/corner_radius"
    card_view:cardElevation="@dimen/elevation"
    card_view:contentPadding="@dimen/small_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tweet_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tweet_image_view"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            tools:text="some really long tweet in multiline mode also maybe in multiline mode to make sure we can see the tweet icon here"/>

        <ImageView
            android:id="@+id/tweet_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/tiny_padding"
            android:src="@drawable/tweet_vector"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>